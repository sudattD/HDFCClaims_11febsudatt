<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.02"
                android:background="@android:color/holo_green_dark"></View>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.40">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    android:src="@drawable/no_image_found" />

                <TextView
                    android:id="@+id/txtTAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@android:color/black"
                    android:gravity="center"
                    android:text="128D 46H 12M"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtCompleteness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:background="@drawable/rounded_button_red"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="0%"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="0.48"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtClaimID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C1108201632201"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtClaimID"
                    android:layout_marginTop="4dp"
                    android:text="K P Singh"
                    android:textColor="#838383"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtVehicleNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCustomerName"
                    android:layout_marginTop="4dp"
                    android:text="GJ-1 KA 4661"
                    android:textColor="#838383"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtVehicleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtVehicleNumber"
                    android:layout_marginTop="4dp"
                    android:text="Fiat Punto-XI"
                    android:textColor="#838383"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtGarageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtVehicleName"
                    android:layout_marginTop="4dp"
                    android:text="Hari Motor Works"
                    android:textColor="#838383"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/txtClaimStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtGarageName"
                    android:layout_marginTop="4dp"
                    android:text="Assigned"
                    android:textColor="@color/hdfc_red"
                    android:textSize="10sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.10"
                android:background="#E9E9E9"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/imgCall"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/call" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imgSMS"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/email" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imgEmail"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/sms" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imgPreApproval"
                    android:layout_width="36dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/chat" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
