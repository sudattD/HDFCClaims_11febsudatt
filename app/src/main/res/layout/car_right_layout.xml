<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hdfc.synoverge.com.hdfc_pointofimpact.EditableCarScreen">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/rightTopRim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_weight=".1"
            android:src="@drawable/rim" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"

            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/fenderRight"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_weight=".5"
                android:src="@drawable/fender_right" />

            <ImageView
                android:id="@+id/rightTopTyre"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="-25dp"
                android:layout_weight=".5"
                android:src="@drawable/tyre" />

        </LinearLayout>

        <ImageView
            android:id="@+id/pillarRight"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_gravity="left"
            android:src="@drawable/a_pillar_right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/doorFrontRight"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/door_front_right" />

                <ImageView
                    android:id="@+id/doorRearRight"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/door_rear_right" />
            </LinearLayout>

            <ImageView
                android:id="@+id/runningBoardRight"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/running_board_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"

            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/quarterPanelRight"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/quarter_panel_right" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"


                >

                <ImageView
                    android:id="@+id/rightBottomTyre"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"

                    android:src="@drawable/tyre" />

                <ImageView
                    android:id="@+id/rightBottomRim"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/rim" />

                <Button
                    android:id="@+id/btnAddtoPartsSelection"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"

                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/rounded_button_red"


                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
