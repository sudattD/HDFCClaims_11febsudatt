<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#C43635</item>
        <item name="colorAccent">#C43635</item>
        <item name="colorPrimaryDark">#800000</item>

        <!--<item name="android:textAppearance">@style/CustomTextAppearance</item>-->

        <item name="actionButtonStyle">@style/ActionButtonStyle</item>

    </style>

    <style name="AppThemeRightArrow" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#C43635</item>
        <item name="colorAccent">#C43635</item>
        <item name="colorPrimaryDark">#800000</item>

        <!--<item name="android:textAppearance">@style/CustomTextAppearance</item>-->

        <item name="actionButtonStyle">@style/ActionButtonStyleRightArraow</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">#7F7F7F</item>
        <item name="android:textSize">50dp</item>
        //Label color in True State And Bar Color False And True State
        <item name="colorAccent">#7F7F7F</item>
        <item name="colorControlNormal">#7F7F7F</item>
        <item name="colorControlActivated">@color/hdfc_red</item>
    </style>


    <style name="Widget.Button.Toggle" parent="android:Widget">
            
        <item name="android:background">@drawable/repair</item>
            
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton" parent="AppTheme">
            
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
            
        <item name="android:textOn"></item>
            
        <item name="android:textOff"></item>
    </style>

    <!--
        <style name="CustomTextAppearance" parent="AppTheme">
            <item name="android:typeface">monospace</item>
        </style>-->

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">56dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="ActionButtonStyleRightArraow" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">56dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar"> 
        <item name="android:windowBackground">@android:color/black</item> 
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
