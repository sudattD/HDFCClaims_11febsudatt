<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hdfc.synoverge.com.hdfc_pointofimpact.EditableCarScreen">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/rightTopRim"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight=".1"
        android:layout_gravity="right"
        android:src="@drawable/rim"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        android:layout_weight=".5"
        >

        <ImageView
            android:id="@+id/fenderRight"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:src="@drawable/fender_right"

            />
        <ImageView
            android:id="@+id/rightTopTyre"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tyre"
            android:layout_marginLeft="-30dp"
            android:layout_gravity="center_vertical"


            />

</LinearLayout>
    <ImageView
        android:id="@+id/pillarRight"
        android:layout_width="70dp"
        android:layout_height="100dp"

        android:src="@drawable/a_pillar_right"
        android:layout_gravity="left"
        />

    <LinearLayout
        android:layout_height="350dp"
        android:layout_width="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/doorFrontRight"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_gravity="center"
             android:src="@drawable/door_front_right"/>
            <ImageView
                android:id="@+id/doorRearRight"
                android:layout_height="150dp"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/door_rear_right"/>
            </LinearLayout>
        <ImageView
            android:id="@+id/runningBoardRight"
            android:layout_height="200dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/running_board_right"/>
        </LinearLayout>

    <LinearLayout
        android:layout_height="250dp"
        android:layout_width="200dp"

        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/quarterPanelRight"
            android:layout_height="300dp"
            android:layout_width="150dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="-10dp"
            android:layout_gravity="center"
            android:src="@drawable/quarter_panel_right"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="-30dp"


            >
            <ImageView
                android:id="@+id/rightBottomTyre"
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="40dp"

                android:src="@drawable/tyre"/>

            <ImageView
                android:id="@+id/rightBottomRim"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_marginLeft="-10dp"
                android:src="@drawable/rim"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
