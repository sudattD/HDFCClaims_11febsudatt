<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="hdfc.synoverge.com.hdfc_pointofimpact.EditableCarScreen">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/bumperFront"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.1"
            android:src="@drawable/bumper_frnt" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical|center"
            android:orientation="horizontal"

            android:weightSum="1"

            >

            <ImageView
                android:id="@+id/headLightLeft"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:src="@drawable/head_light_left"
                />

            <ImageView
                android:id="@+id/grille"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/grille"
                />

            <ImageView
                android:id="@+id/headLightRight"
                android:layout_width="60dp"
                android:layout_height="45dp"

                android:src="@drawable/head_light_right" />

        </LinearLayout>

        <ImageView
            android:id="@+id/bonet"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"


            android:layout_weight="0.05"
            android:src="@drawable/bonnet" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|center_vertical|center"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_weight=".3"
        android:weightSum="1"

        >
        <ImageView
            android:id="@+id/windSheildFront"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:src="@drawable/windshield_front" />


        <ImageView
            android:id="@+id/roof"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:src="@drawable/roof" />

        <ImageView
            android:id="@+id/windSheilRear"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:src="@drawable/windshield_rear" />


</LinearLayout>

        <ImageView
            android:id="@+id/dicky"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:layout_gravity="center"
            android:src="@drawable/dicky" />


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:gravity="center"
            android:layout_weight=".15"
            android:weightSum="1"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/tailLightLeft"
            android:layout_width="80dp"
            android:layout_height="40dp"

            android:layout_gravity="center"
            android:src="@drawable/tail_light_left" />

            <ImageView
                android:id="@+id/tailLightRight"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"

                android:layout_gravity="center"
                android:src="@drawable/tail_light_right" />

            </LinearLayout>


        <ImageView
            android:id="@+id/bumperRearl"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:layout_gravity="center"
            android:src="@drawable/bumper_rear" />
    </LinearLayout>

</RelativeLayout>
