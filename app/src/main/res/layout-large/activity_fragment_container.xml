<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/allPartsDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:elevation="5dp">


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/relative_scroll"
            android:background="@android:color/black"></View>

        <RelativeLayout
            android:id="@+id/relative_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="3dp"
                android:background="@color/hdfc_red"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_toRightOf="@+id/home"
                android:layout_centerVertical="true"
                android:src="@drawable/left_arrow_scroll" />

            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/forward"
                android:layout_toRightOf="@+id/back"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layoutInsuredDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:background="@android:color/darker_gray"></View>

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/insured_details" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutPolicyInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/policy_info" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDocumentsUpload"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/documents_uploads" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutWorkshopSelection"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/workshop_selection" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSurveyDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/survey_details" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDLnRCDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/dl_rc_details" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutPointOfImpact"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/point_of_impact" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutComputationEntry"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/computation_entry" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutComputationSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/computation_summary" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutClaimHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/claim_history" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCPLoss"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/cp_loss" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layoutCPExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:background="@drawable/cp_expense" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@android:color/darker_gray"></View>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/forward"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow_scroll" />

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/llRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:gravity="start">

        <ImageView
            android:id="@+id/imgCloseDrawer"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-9dp"
            android:src="@drawable/drawer_arrow_close" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white"></View>

                    <CheckBox
                        android:id="@+id/checkboxPanelOuterParts"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"



                        android:background="@color/hdfc_red"
                        android:button="@drawable/checkbox_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="Panels &amp; Outer Parts"
                        android:textColor="@android:color/white"
                        android:textSize="17dp" />

                    <com.hdfc.claims.Widgets.ExpandedListView
                        android:id="@+id/lvPanelOuterParts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white"></View>

                    <CheckBox
                        android:id="@+id/checkboxGlassParts"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"



                        android:background="@color/hdfc_red"
                        android:button="@drawable/checkbox_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="Glass Parts"
                        android:textColor="@android:color/white"
                        android:textSize="17dp" />

                    <com.hdfc.claims.Widgets.ExpandedListView
                        android:id="@+id/lvGlassParts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/white"></View>

                    <CheckBox
                        android:id="@+id/checkboxPlasticRubberParts"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"



                        android:background="@color/hdfc_red"
                        android:button="@drawable/checkbox_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="Plastic / Rubber Parts"
                        android:textColor="@android:color/white"
                        android:textSize="17dp" />

                    <com.hdfc.claims.Widgets.ExpandedListView
                        android:id="@+id/lvPlasticRubberParts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>