<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvUser"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="end"
        card_view:cardBackgroundColor="#F1F1F1"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/questionLL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msgOwnerUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q: "
                android:textSize="20dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/queryUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="What happens to my car insurance when I sell my car?"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvService"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="start"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/questionLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msgOwnerService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q: "
                android:textSize="20dp"
                android:textColor="#158EB9" />

            <TextView
                android:id="@+id/queryService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What happens to my car insurance when I sell my car?"
                android:textSize="20dp"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>